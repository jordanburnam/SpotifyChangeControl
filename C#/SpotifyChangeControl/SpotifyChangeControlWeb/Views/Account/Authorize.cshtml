@{
    ViewBag.Title = "Authorize";

    string sButtonClass = "btn btn-default ";
    if (@ViewData["AuthUrl"].ToString().Length == 0)
    {
        sButtonClass += "disabled";
    }
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
         
            
            <input type="button" value="Authorize" class="@sButtonClass" onclick="window.location ='@ViewData["AuthUrl"]'"/>
            
        </section>
    </div>
</div>

